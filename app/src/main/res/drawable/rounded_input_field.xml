<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape>
            <solid android:color="#80B0C4" /> <!-- Semi-transparent shadow color -->
            <corners android:radius="25dp" /> <!-- Rounded corners for shadow -->
        </shape>
    </item>

    <!-- Gradient background for the button -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape>
            <gradient
                android:startColor="#008B8B"
                 android:endColor="#005F5F"
                 android:angle="0" />
            <corners android:radius="25dp" />
        </shape>
    </item>
</layer-list>
